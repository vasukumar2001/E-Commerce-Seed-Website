@model IEnumerable<Khareedo.Models.Order>

@{ ViewBag.Title = "Order";
    }

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>




       
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
           Address
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OrderID)
    </td>


    <td>
        @Html.DisplayFor(modelItem => item.OrderDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShippingDetail.Address),@Html.DisplayFor(modelItem => item.ShippingDetail.City)-@Html.DisplayFor(modelItem => item.ShippingDetail.PostCode)
    </td>
    <td>
        @Html.ActionLink("View Details", "Details", new { id = item.OrderID }, new { @class = "btn btn-success" })
        @Html.ActionLink("View Invoice", "invoice", new { id = item.OrderID }, new { @class = "btn btn-success" })

    </td>
</tr>}

</table>
