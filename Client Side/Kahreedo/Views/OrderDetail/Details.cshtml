@using Khareedo.Models;
@model Tuple<Order, IEnumerable<OrderDetail>>
@{ ViewBag.Title = "Order";
    ViewBag.SubTitle = "Details"; }
<link href="~/Content/css/StyleSheet1.css" rel="stylesheet" />


<div class="col-md-12">
    <center><h3>-:Order Tracking:-</h3></center>
</div>

@if (Model.Item1.StatusId==1)
{

<div class="col-md-12">
    <div class="progress-track">
        <ul id="progressbar">
            <li class="step0 active " id="step1">Ordered</li>
            <li class="step0  text-center" id="step2">Shipped</li>
            <li class="step0  text-right" id="step3">Out For Delivery</li>
            <li class="step0  text-right" id="step4">Delivered</li>


        </ul>
    </div>
</div> }
else if (Model.Item1.StatusId==2)
{
<div class="col-md-12">
    <div class="progress-track">
        <ul id="progressbar">
            <li class="step0 active " id="step1">Ordered</li>
            <li class="step0 active text-center" id="step2">Shipped</li>
            <li class="step0  text-right" id="step3">Out For Delivery</li>
            <li class="step0  text-right" id="step4">Delivered</li>


        </ul>
    </div>
</div> }
else if (Model.Item1.StatusId==3)
{
<div class="col-md-12">
    <div class="progress-track">
        <ul id="progressbar">
            <li class="step0 active " id="step1">Ordered</li>
            <li class="step0 active text-center" id="step2">Shipped</li>
            <li class="step0 active text-right" id="step3">Out For Delivery</li>
            <li class="step0  text-right" id="step4">Delivered</li>


        </ul>
    </div>
</div> }
else if (Model.Item1.StatusId==4)
{
<div class="col-md-12">
    <div class="progress-track">
        <ul id="progressbar">
            <li class="step0 active " id="step1">Ordered</li>
            <li class="step0 active text-center" id="step2">Shipped</li>
            <li class="step0 active text-right" id="step3">Out For Delivery</li>
            <li class="step0 active text-right" id="step4">Delivered</li>


        </ul>
    </div>
</div>}




<div class="col-md-12" >
    <div class="col-md-6">

        <dl class="dl-horizontal ">
            <dt>
                @Html.DisplayName("Status : ")
            </dt>
            <dd>

                @if (Model.Item1.StatusId==1)
                {

    @Html.DisplayName("Pending") }
else if (Model.Item1.StatusId==2)
{
@Html.DisplayName("In Progress") }
else if (Model.Item1.StatusId==3)
{
@Html.DisplayName("Shipped") }
else if (Model.Item1.StatusId==4)
{
@Html.DisplayName("Out of Delivery")}
else if (Model.Item1.StatusId==5)
{
@Html.DisplayName("Delivered")}


            </dd>
            <dt>
                @Html.DisplayName("Order ID : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.OrderID)
            </dd>

            <dt>
                @Html.DisplayName("Customer Name : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.First_Name)
            </dd>
            <dt>
                @Html.DisplayName("Customer Address : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.Address1)
            </dd>
            <dt>
                @Html.DisplayName("Contact No : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.Customer.Mobile1)
            </dd>

        </dl>
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal ">
            <dt>
                @Html.DisplayName("Payment ID : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.PaymentID)
            </dd>
            <dt>
                @Html.DisplayName("Shipping ID : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.ShippingID)
            </dd>
            <dt>
                @Html.DisplayName("Shipping Address : ")
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Item1.ShippingDetail.Address)
            </dd>


        </dl>
    </div>


    <div class="col-md-12">
        <div class="panel panel-success">
            <div class="panel-heading" style="padding:5px 15px">
                <h4>Items</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="">
                        <div class="table-responsive col-md-off ">
                            <table class="table table-hover ">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Product Name</th>
                                        <th>Quantity</th>
                                        <th>Unit Price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{int i = 0;}
                                    @foreach (var item in Model.Item2)
                                    {
                                        i++;
                        <tr>
                            <td>@i.ToString()</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.TotalAmount</td>
                        </tr>
}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="5"><h2></h2></td>

                                    </tr>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th>@ViewBag.TotalItems</th>
                                        <th></th>
                                        <th>@ViewBag.Amount </th>
                                    </tr>
                                    <tr>
                                        <th>Discount</th>
                                        <th colspan="3"></th>
                                        <th>@ViewBag.Discount</th>
                                    </tr>
                                    <tr class="bg-info">
                                        <th>Total Amount</th>
                                        <th colspan="3"></th>
                                        <th>@ViewBag.TAmount</th>
                                    </tr>
                                </tfoot>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12">

    @Html.ActionLink("Back", "Index", "Order", new { @class = "btn btn-success" })


</div>

    

}