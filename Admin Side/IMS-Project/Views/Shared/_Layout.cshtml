<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title -Admin Site</title>

    @Styles.Render("~/Content/css")
    <style>
        .page-header {
            padding-bottom: 5px;
            margin: 10px;
            border-bottom: 1px solid #eee;
        }
        .navbar-inverse .navbar-nav>.active>a{
            color: #fff;
            background-color: #337ab7;
        }
        .navbar-brand {
        padding:0;
        }
    </style>
 
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" rel="home" href="@Url.Action("Index","Dashboard")" title="Kahreedo.pk">
                    <img style="max-width:50px; margin-right: 10px; display:inline-block"
                         src="~/Fasticon-Shop-Cart-Shop-cart.ico">Admin Site
                </a>              
                  
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
               
              
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i>@Session["username"]<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("Index","Profile")"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>
                        
                       
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("Logout","admin_Login")"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li class="@(ViewBag.Title=="Dashboard" ? "active" : "")">
                        <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="collapse" data-target="#demo"><i class="fa fa-fw fa-shopping-cart"></i> Order<b class="caret"></b></a>
                        <ul id="demo" class="collapse">
                            <li>
                                <a href="@Url.Action("Index", "Order")">Order detail</a>
                            </li>
                            <li>
                                <a href="@Url.Action("OrderStatusManage", "Order")">OrderStatus Manage</a>
                            </li>
                        </ul>
                    </li>
                   
                    <li class="@(ViewBag.Title == "Categories" ? "active" : "")">
                        <a href="@Url.Action("Index", "Categories")"><i class="fa fa-fw fa-table"></i> Categories</a>
                    </li>
                    <li class="@(ViewBag.Title == "Product" ? "active" : "")">
                        <a href="@Url.Action("Index", "Product")"><i class="fa fa-fw fa-table"></i> Product</a>
                    </li>
                    <li class="@(ViewBag.Title == "Supplier" ? "active" : "")">
                        <a href="@Url.Action("Index", "Supplier")"><i class="fa fa-fw fa-truck"></i> Supplier</a>
                    </li>
                    <li class="@(ViewBag.Title == "Customer" ? "active" : "")">
                        <a href="@Url.Action("Index", "Customer")"><i class="fa fa-fw fa-male"></i> Customer</a>
                    </li>
                    <li class="@(ViewBag.Title == "Employee" ? "active" : "")">
                        <a href="@Url.Action("Index", "Employee")"><i class="fa fa-fw fa-user"></i>Employee</a>
                    </li>


                    <li class="@(ViewBag.Title == "Logout" ? "active" : "")">
                        <a href="@Url.Action("Logout", "Login")"><i class="fa fa-fw fa-sign-out"></i>Logout</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
              
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                           @ViewBag.Title
                            <small>@ViewBag.SubTitle</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="@Url.Action("Index","Dashboard")">Home</a>
                            </li>
                            <li >
                                <i class=""></i> @ViewBag.Title
                            </li>
                            <li >
                                <i class=""></i> @ViewBag.SubTitle
                            </li>
                        </ol>
                        
                    </div>
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
                <!-- /.row -->
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Design By Abc</p>
                </footer>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->

    <!-- jQuery and Bootstrap Core JavaScript -->
    @Scripts.Render("~/Content/js")
    @RenderSection("scripts", required: false)
   
</body>
</html>